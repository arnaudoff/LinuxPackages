@model IEnumerable<LinuxPackages.Web.Mvc.ViewModels.IssueReplies.ListedIssueRepliesViewModel>

@foreach (var reply in Model)
{
    <div class="row">
        <div class="col-sm-1">
            <div class="thumbnail">
                <img class="img-responsive user-photo" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png">
            </div>
        </div>
        <div class="col-sm-11">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong>@reply.Author.FirstName @reply.Author.LastName (@reply.Author.Username)</strong> <span class="text-muted">replied on @reply.CreatedOn</span>
                </div>
                <div class="panel-body">
                    @Html.Raw(reply.Content)
                </div>
            </div>
        </div>
    </div>
}