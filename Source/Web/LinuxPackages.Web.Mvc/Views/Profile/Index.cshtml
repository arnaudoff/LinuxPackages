@model LinuxPackages.Web.Mvc.ViewModels.Profile.ProfileViewModel
@{
    ViewBag.Title = "Profile";
}

<div>
    <h4>General</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>First name</dt>
        <dd>@Model.FirstName</dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>Last name</dt>
        <dd>@Model.LastName</dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>Email</dt>
        <dd>@Model.Email</dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>Packages maintained</dt>
        <dd>
            @if (Model.PackagesMaintained != null && Model.PackagesMaintained.Count > 0)
            {
                <ul class="list-group">
                    @foreach (var package in Model.PackagesMaintained)
                    {
                        <li class="list-group-item"><a href="/Packages/Details/@package.Url">@package.Name</a></li>
                    }
                </ul>
            }
            else
            {
                <span>0</span>
            }

        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>Issues posted</dt>
        <dd>
            @if (Model.IssuesCreated != null && Model.IssuesCreated.Count > 0)
            {
                <ul class="list-group">
                    @foreach (var issue in Model.IssuesCreated)
                    {
                        <li class="list-group-item"><a href="/Packages/Details/@issue.Url">@issue.Id</a> @issue.Title @issue.Package.Name</li>
                    }
                </ul>
            }
            else
            {
                <span>0</span>
            }
        </dd>
    </dl>
    <h4>Manage</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>
            [@Html.ActionLink("Change", "ChangePassword")]
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>Avatar:</dt>
        <dd>
            [@Html.ActionLink("Change", "ChangeAvatar")]
        </dd>
    </dl>
</div>
