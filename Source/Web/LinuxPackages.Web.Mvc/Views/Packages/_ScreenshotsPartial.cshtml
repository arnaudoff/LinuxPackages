@using LinuxPackages.Web.Mvc.Infrastructure.Helpers
@using LinuxPackages.Common.Constants

@model IEnumerable<LinuxPackages.Web.Mvc.ViewModels.Packages.ListedScreenshotViewModel>

@if (Model.Count() > 0)
{
    var packageId = (string)ViewData["PackageId"];

    <p>Click to view full size.</p>
    foreach (var screenshot in Model)
    {
        var screenshotHash = screenshot.Id.ToString() +
            QueryStringUrlHelper.GenerateUrlHash(
            screenshot.Id.ToString(),
            (string)HttpContext.Current.Application[GlobalConstants.UrlSaltKeyName]);

        <a href="/Files/Screenshots/@packageId/@screenshotHash">
            <img src="/Files/Screenshots/@packageId/@screenshotHash/@(PackageConstants.ScreenshotThumbnailWidth)x@(PackageConstants.ScreenshotThumbnailHeight)" class="img-responsive" />
        </a>
        <br />
    }
}
else
{
    <p>No screenshots uploaded for this package!</p>
}