@model LinuxPackages.Web.Mvc.ViewModels.Packages.PackageDetailsViewModel

@{
    ViewBag.Title = "Package details";
}

<div>
    <h4>Details for package <strong>@Model.Name</strong></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>
            @Model.Name
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>Description</dt>
        <dd style="word-wrap: break-word;">@Model.Description</dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>Distribution</dt>
        <dd>
            <a href="@Model.Distribution.Url">
                @string.Format("{0} {1}", @Model.Distribution.Name, @Model.Distribution.Version)
            </a> (@Model.Distribution.Maintainer)
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>Repository</dt>
        <dd>
            <a href="@Model.Repository.Url">
                @Model.Repository.Name
            </a>
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>Architecture</dt>
        <dd>@Model.Architecture.Name</dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>License</dt>
        <dd>
            <a href="@Model.License.Url">
                @Model.License.Name
            </a><br />
            <small>@Model.License.Description</small>
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>File</dt>
        <dd>
            <a href="/Files/Packages/@Model.Id" class="k-button">Download</a><br />
            <small>@string.Format("{0}, {1} B", @Model.FileName, @Model.Size)</small><br />
        </dd>
    </dl>
    @(Html.Kendo().TabStrip()
                  .Name("detailsTabstrip")
                  .Animation(false)
                  .Items(items =>
                  {
                      items
                          .Add()
                          .Selected(true)
                          .Text("Screenshots")
                          .Content(Html.Partial("_ScreenshotsPartial", Model.Screenshots, new ViewDataDictionary { { "PackageId", Model.Id } }).ToHtmlString());

                      items
                          .Add()
                          .Text("Comments")
                          .Content(Html.Partial("_CommentsPartial", Model.Comments, new ViewDataDictionary { { "PackageId", Model.Id } }).ToHtmlString());

                      items
                          .Add()
                          .Text("Maintainers")
                          .Content(Html.Partial("_MaintainersPartial", Model.Maintainers, new ViewDataDictionary { { "PackageId", Model.Id } }).ToHtmlString());
                  }))
</div>

@section Scripts {
    <script type="text/x-kendo-tmpl" id="commentTemplate">
        <div class="comment">
            <p>#:Content#</p>
            <span class="pull-right">#:CreatedOn#</span>
        </div>
    </script>
}