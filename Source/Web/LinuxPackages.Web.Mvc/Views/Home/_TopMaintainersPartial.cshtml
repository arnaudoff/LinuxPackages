@using LinuxPackages.Web.Mvc.ViewModels.Account

@(Html.Kendo()
    .Grid<ListedTopMaintainersViewModel>()
    .Name("TopMaintainersGrid")
    .Columns(columns =>
    {
        columns
            .Bound(m => m.Username)
            .Title("Username")
            .HeaderHtmlAttributes(new { style = "text-align: center;" });

        columns
            .Bound(m => m.MaintainedPackagesCount)
            .Title("Packages")
            .HeaderHtmlAttributes(new { style = "text-align: center;" });
    })
    .DataSource(data =>
        data
            .Ajax()
            .Read(r => r.Action("GetTopMaintainers", "Home"))
            .Sort(c => c.Add("MaintainedPackagesCount").Descending())
    )
)